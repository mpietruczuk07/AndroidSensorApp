<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/get_location_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pobierz lokalizację"
            android:translationX="15dp"
            android:translationY="600dp" />

        <Button
            android:id="@+id/get_address_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pobierz adres"
            android:translationX="20dp"
            android:translationY="600dp" />

        <TextView
            android:id="@+id/textview_location"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:text="Wciśnij przycisk, aby pobrać ostatnią lokalizację"
            android:translationX="-300dp"
            android:translationY="300dp" />

        <TextView
            android:id="@+id/textview_address"
            android:visibility="visible"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:text=""
            android:translationX="-600dp"
            android:translationY="400dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>